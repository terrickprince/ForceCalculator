<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity" android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
            android:id="@+id/label"
            android:layout_width="fill_parent"
            android:layout_height="19dp"
            android:text="FORCE CALCULATOR" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/entry" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="300dp"/>

    <EditText
            android:id="@+id/entry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/label"
            android:background="@android:drawable/editbox_background"
            app:layout_constraintBottom_toTopOf="@+id/open"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="50dp"
            app:layout_constraintTop_toBottomOf="@+id/label" android:layout_marginTop="200dp"/>

    <Button
            android:id="@+id/open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/entry"
            android:layout_marginLeft="200dp"
            android:text="Start" app:layout_constraintStart_toStartOf="@+id/entry"
            android:layout_marginStart="200dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="200dp"/>

    <Button
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/open"
            android:layout_toLeftOf="@id/open"
            android:text="Stop" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/entry" android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp" android:layout_marginTop="200dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>